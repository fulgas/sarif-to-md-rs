{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "prConcurrentLimit": 3,
  "schedule": [
    "before 6am on monday"
  ],
  "separateMajorMinor": true,
  "packageRules": [
    {
      "description": "Set a sensible default for all Cargo packages",
      "matchDatasources": [
        "cargo"
      ],
      "rangeStrategy": "bump"
    },
    {
      "description": "Group all major dependency updates into one PR for manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "Major Dependencies",
      "semanticCommitType": "feat",
      "automerge": false
    },
    {
      "description": "Group minor/patch updates for the Serde ecosystem",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Serde ecosystem",
      "matchPackageNames": [
        "/^serde/",
        "/^serde-*/"
      ],
      "semanticCommitType": "fix"
    },
    {
      "description": "Group minor/patch updates for the Tokio ecosystem",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "Tokio ecosystem",
      "matchPackageNames": [
        "/^tokio/"
      ],
      "semanticCommitType": "fix"
    },
    {
      "description": "Auto-merge patch updates for dev-dependencies",
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "semanticCommitType": "fix",
      "automerge": true
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 6am on the first day of the month"
    ]
  }
}
